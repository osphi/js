rodada = 1
while(rodada <=3){
  console.log("Rodada:" + rodada)

  escolhajogador = prompt("Nível " + rodada + ", escolha uma opção entre 1 e 3:")
  pisofalso = Math.floor(Math.random() * 3) + 1;

  if(escolhajogador == pisofalso){
    alert("Parece que você não fez uma boa escolha. Jogo encerrado.")
    rodada = 1000
    }

    else if(escolhajogador <1 || escolhajogador >= 4){
    alert("Essa não é uma escolha possível. Tente novamente.")
    rodada = 1000
      }

        else {
    alert("Deu sorte! A escolha errada era: " + pisofalso)
          }

        if(rodada == 4){
    alert("Parabéns! Você venceu!")
  }
}
